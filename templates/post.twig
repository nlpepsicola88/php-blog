{% extends 'base.twig' %}

{% block body %}
  <div class="container">
    {% if post.image_path is not null %}
       <img src="{{post.image_path}}" class="img-fluid" alt="{{post.image_path}}">
    {% endif %}
    <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
    <div class=" mb-3">
      <div class="row">
        <span class="text-muted">Васин Ильдар | {{post.published_date|date("F d, Y") }}</span>
      </div>
    </div>
    <div>
      {{ post.content|raw }}
    </div>
  </div>
{% endblock %}